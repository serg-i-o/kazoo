{
    "_id": "_design/centrix",
    "language": "javascript",
    "views": {
        "crossbar_listing": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'centrix' || doc.pvt_deleted)",
                "    return;",
                "  emit(doc._id, {",
                "    'id': doc._id,",
                "    'name': doc.name,",
                "    'description': doc.description,",
                "    'callflow_id': doc.callflow_id,",
                "    'type': doc.type",
                "  });",
                "}"
            ]
        },
        "cx_accounts_by_centrix_id": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'centrix_account' || doc.pvt_deleted)",
                "    return;",
                "  emit(doc.centrix_id, {",
                "    'id': doc._id,",
                "    'centrix_id': doc.centrix_id,",
                "    'username': doc.username,",
                "    'user_id': doc.user_id,",
                "    'number': doc.number_offnet,",
                "    'type': doc.type",
                "  });",
                "}"
            ]
        },
        "cx_accounts_by_number_offnet": {
            "map": [
                "function(doc) {",
                "  if (doc.pvt_type != 'centrix_account' || doc.pvt_deleted)",
                "    return;",
                "  emit(doc.number_offnet, {",
                "    'id': doc._id,",
                "    'centrix_id': doc.centrix_id,",
                "    'username': doc.username,",
                "    'user_id': doc.user_id,",
                "    'number': doc.number_offnet,",
                "    'type': doc.type",
                "  });",
                "}"
            ]
        }
    }
}
